#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="vendor"
LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

topic "Setting up build environment"
cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR

topic "Downloading waveform"
wget https://github.com/tspecht/waveform/archive/master.zip

topic "Unpacking waveform and compiling"
unzip master.zip -d waveform
cd waveform
make

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/waveform.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/waveform"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/vendor/waveform"' >> $PROFILE_PATH

# topic "Writing profile script"
# mkdir -p $BUILD_DIR/.profile.d
# cat <<EOF >$BUILD_DIR/.profile.d/waveform.sh
# export PATH="$PATH:\$HOME/waveform-master"
# EOF

# export PATH="$PATH:\$HOME/waveform-master"
